platform :ios, '8.0'
inhibit_all_warnings!

target 'iOSOneDemo' do
  # 视图层{
        pod 'MJRefresh'      # 上下拉刷新
        pod 'DMPagerViewController'     # ViewPager
#        pod 'FDFullscreenPopGesture'    # 手势返回
        pod 'Masonry'                   # Masonry 界面约束编程
        pod 'SVProgressHUD'  # progressBar 等待进度圈
  # }
  

  # 模型层 {
        pod 'YYCache' # 缓存工具类
        pod 'YYModel' # Model层建模（数据解析、校验、过滤）
  # }
  

  # 业务层 {
#        pod 'ReactiveCocoa'             # RAC，函数式编程
  # }
  

  # 网络 {
        pod 'AFNetworking'     # 网络 - 下载工具
        pod 'SDWebImage'       # 网络 - 下载图片
  # }
  
  
  # 持久化管理 {
        pod 'FCFileManager' # 文件系统管理工具
  # }
end
